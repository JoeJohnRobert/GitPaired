<h4><%= @users.size %> developer(s) found near zip code <%= @query %>.</h4>

<% @users.each do |user| %>
<div class="col-md-4">
  <h3><%= link_to(user.first_name, user_path(user)) %></h3>
  <%= link_to user_path(user) do %>

    <%= image_tag(user.image_path, width:'100', height:'auto')%>
    <%= user.get_neighborhood %>
  <% end %>
  <h3>Projects</h3>
  <% user.projects.each do |project| %>
    <% if project.recent? %>
    <p><%= project.name %></p>

    <% project.languages.each do |language| %>
    <p>Written in: <%= language.name %><p>
      <%end%>
    <% end %>
  <% end %>
<% end %>
