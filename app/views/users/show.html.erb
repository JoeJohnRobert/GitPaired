<h1> <%= @full_name %></h1>

<div class="profile-pic">
    <p><%= link_to image_tag(@user.image_path), @user.gh_url, class: 'profile-image' %></p>
</div>

Location: <%= @neighborhood %> <br>
Email: <%= @user.email %>
<br>

<div class="user-projects">
  Projects: <br>
  <ol>
  <% @user.sort_projects_by_push.reverse.each do |project| %>
    <% if project.recent? %>
      <li> <%= link_to project.name, project.archive_url %> :
        <% if project.collaborator_wanted %>
        This Project Needs Collaborators! Get in touch with <%= @user.first_name %> at the email above for more info.
        <% else %>
        Project Closed
        <% end %>
      </li>
    <% end %>  
  <% end %>
  </ol>
</div>