<h1> <%= @full_name %></h1>

<div class="profile-pic">
    <p><%= link_to image_tag(@user.image_path), @user.gh_url, class: 'profile-image' %></p>
</div>

Location: <%= @neighborhood %> 
<% if @user.email.size > 0 %>  
  <br>
  Email: <%= @user.email %>
<% end %>
<br>

<div class="user-projects">
  Projects: <br>
  <ol>
  <% @user.sort_projects_by_push.reverse.each do |project| %>
    <% if project.recent? %>
      <li> <%= link_to project.name, project.archive_url %> :
        <%= form_tag("/users/#{current_user.id}/projects/#{project.id}", method: "patch", remote: true) do %>
            <%= hidden_field :collaborator_wanted, :value => "0" %>
            <%= submit_tag 'Want help?' %>
        <% end %>
        <% if project.collaborator_wanted %>
        <div class="collabs_wanted"> This Project Needs Collaborators! Get in touch with <%= @user.first_name %> at the email above for more info.</div>
        <% else %>
        <div class="collabs_not_wanted">Project Closed</div>
        <% end %>
      </li>
    <% end %>  
  <% end %>
  </ol>
</div>