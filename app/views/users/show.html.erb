<section id="portfolio" class="add-padding">

  <div class="container">
    <div class="row">
      <div class="col-sm-6 scrollimation fade-right d1 user-pic">
        <img class="img-responsive polaroid" src="<%= @user.image_path %>" alt="" />
      </div>  
      <div class="col-sm-6 scrollimation fade-left d3">
        <h1 class='big-text' data-latitude='<%= @user.latitude %>' data-longitude='<%= @user.longitude %>'><%= @full_name %></h1>
        <h2>Located in <%= @neighborhood %></h2> 
        <% if @user.email %>
          <% if @user.email.size > 0 %>  
            <br><h2>Email: <a href=<%= "mailto:#{@user.email}?"%>><%= @user.email %></a></h2>
          <% end %>
        <% end %>
        <h2> Primary language: <%= @user.most_common_language %></h2>
        <br>
      
        <% if current_user && current_user.id == @user.id %>
          <h2>Your Projects</h2> 
            <% @user.sort_projects_by_push.reverse.each do |project| %>
            <div class='proj-hover'>  
            <% if project.recent? %>
              <h3> <%= link_to project.name, project.archive_url %></h3>
              <%= form_for project, url: user_project_path(@user.id, project.id), remote: true do |f| %>
                <%= f.hidden_field :collaborator_wanted, :value => 'toggle' %>
                <% if project.collaborator_wanted %> 
                  <h3 data-id='<%= project.id %>'> <%= f.button '<i class="fa fa-user selected"></i>'.html_safe %> </h3>       
                <% else %>
                  <h3 data-id='<%= project.id %>'> <%= f.button '<i class="fa fa-user"></i>'.html_safe %> </h3>
                <% end %>
              <% end %>
            <% end %>  
            </div>  
          <% end %>

        <% else %>
          <h2><%= @user.first_name %> is looking for collaboration on:</h2>
          <% @user.sort_projects_by_push.reverse.each do |project| %>
          
            <% if project.recent? && project.collaborator_wanted %>
              <div class="project-details">
              <h3> <%= link_to project.name, project.archive_url %> </h3>
              <ul>
                <li> Someone last pushed to <%= project.name %> on <%= project.pushed_at.strftime("%A, %B %d, %Y at %l%p") %> </li>
                <li> The source codes's primary language is <%=project.language%> </li>
              </ul>
                </div>
            <% end %>  
          <% end %>
        <% end %>  
      </div>
    </div>
  </div>
  <br><br>
    

<!-- ==============================================
START PROJECTS ITEM
=============================================== -->    

  <div class="container masonry-wrapper masonry-images-margin">    
    <div id="projects-container" class="masonry" style="visibility: visible; position: relative;  width: 100%">

    <% @user.all_projects.each do |project| %>
      <article class= "project-item" style='float:left' >
        <img class="img-responsive project-image project-language" src='/assets/<%= project.language.downcase %>.png'>
        <%= link_to project.archive_url do %>
          <div class="hover-mask">
            <h2 class="project-title project-tile-header"><%= project.name %></h2><!--Project Title -->
            <div class='project-description'>
              <p class='overview'>This is the decription. This is the decription. This is the decription. This is the decription. </p>
              <h2 class='project-title project-description-header'>Written In:</h2>
                <p class='project-languages'> Ruby, JavaScript, Python, SQL </p>
              <h2 class='project-title project-description-header'>Need Help With:</h2>
                <p class='need-help'>Ruby, JavaScript </p>
            </div>
          </div>
        <% end %>
        <a href="mailto:<%= @user.email %>?subject=Helping Out With <%= project.name %>">
        <%#= link_to "mailto:#{@user.email}?" do %>
          <div class="hover-mask bottom-mask">
            <h2 class='project-title project-description-footer'>Get In Touch!</h2>
          </div>
        </a>
        <%# end %>
      </article>
    <% end %>

    </div>
  </div>

<!-- ==============================================
END PROJECT ITEMS
=============================================== -->

</section>

