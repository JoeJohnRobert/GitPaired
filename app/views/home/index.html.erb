<section id="twitter" class="add-padding bg-color1">
  <h3 style='color:white'>Find & Collaborate with Local Devs</h3>
    
        <wrapper class='text-center'>
          <% if !current_user || current_user.location %>
            <h1 class='big-text' style='color:white'>Find Projects Near You!</h1>
          <%= form_tag searches_path, :method => 'get' do %>
            <%= notice %>
            <%= text_field_tag :query, params[:query], :placeholder => "Enter Your Zip Code" %>
            <%= submit_tag "Git Paired" %>

          <% end %>
          

          <% elsif current_user && !current_user.location %>

            
              <h1 class='big-text' style='color:white'>Enter Your Zip Code</h1>
                
                <%= form_tag("/users/#{current_user.id}", method: "patch" ) do %>
                  <%= text_field_tag :location, params[:location], placeholder: "Enter Your Zip Code" %>
                  <%= submit_tag "Git Paired" %>
                <%end%>

          <% end %>
        </wrapper>              

      
    


  <form id="contact-form" class="col-sm-2 centered scrollimation fade-left d3 in" action="" method="" novalidate="" _lpchecked="1" > 
            
    <div class="form-group">
      <label class="control-label" for="contact-name">Zipcode</label>
      <div class=""> <!-- was class='controls'  -->
      <input id="" name="zipcode" placeholder="Enter your zipcode" class="form-control requiredField" data-new-placeholder="Enter your zipcode" type="text" data-error-empty="Please enter your zipcode">
      
      </div>
    </div><!-- End zipcode input -->

    
    <p><button name="submit" type="submit" class="btn btn-color2 btn-block" data-error-message="Error!" data-sending-message="Sending..." data-ok-message="Message Sent"><i class="fa fa-paper-plane"></i>Git Paired!</button></p>
    <input type="hidden" name="submitted" id="submitted" value="true">
    
  </form>

  <br><br>
</section>

